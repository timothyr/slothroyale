{
  "compileOnSave": false,
  "include": [
    "../common/**/*.ts",
    "../mapgeneration/**/*.ts",
    "src/**/*.ts"
  ], 
  "exclude": [
    "node_modules",
    "../common/node_modules",
    "../mapgeneration/node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths" : {
      "@app/*" : [
        "src/app/*"
      ],
      "@game/*" : [
        "src/game/*"
    ]
    },
  }
}
